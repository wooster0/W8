; BECAUSE WE DON'T USE A TOKENIZER THIS DOESN'T WORK EITHER (BECAUSE OF % FOR BINARY):
;%RED%   %1000_0000 %RED%
;%GREEN% %0100_0000 %GREEN%
;%BLUE%  %0010_0000 %BLUE%
; IT WOULD BE BETTER TO USE ONE.

ALTERNATE_LIGHTS:
    SET W %1000_0000
    TWS
    SET W 5
    WAI HANDLER
    SET W %0100_0000
    TWS
    SET W 5
    WAI HANDLER
    SET W %0010_0000
    TWS
    SET W 5
    WAI HANDLER
    JMP ALTERNATE_LIGHTS

HANDLER:
    JMP W
